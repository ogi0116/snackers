<div class= "container py-5 px-sm-0">
  <div class= "row">
    <h2 class= "col-12">検索結果</h2>
  </div>
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  　<div class= "row">
     <%= render 'public/users/user_list', users: @users %>
    </div>
    <div class="row justify-content-center">
      <%= paginate @users %>
    </div>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <div class= "row">
      <div class= "col-8 offset-2">
      <%= render 'public/items/postitems', items: @items %>
      </div>
    </div>
    <div class="row justify-content-center">
      <%= paginate @items %>
    </div>
  <% end %>
</div>
<div class= "container py-5 px-sm-0">
  <div class= "row">
     <h2 class= "col-12">検索結果</h2>
  </div>
      <!--検索対象モデルがUserの時 -->
      <% if @range == "User" %>
      <div class= "row">
        <% if @renge.blank? %>
          <h4 class= "col-4 offset-4 mt-5 background text-center">ユーザーはいません</h4>
        <% else %>
          <% @users.each do |user| %>
          <table class="table table_group">
            <tbody>
             <tr>
                <td class="align-middle text-center" style="width: 20%"><%= link_to(user) do %>
                  <%= image_tag user.get_profile_image(100,100) %><br>
                  <%= user.name %>
                  <% end %>
                </td>
                 <td class="align-middle text-center" style="width: 25%"><%= user.introduction %></td>
                 <td class="align-middle text-center" style="width: 20%"><%= "フォロー数: #{user.active_relationships.count}" %></td>
                 <td class="align-middle text-center" style="width: 20%"><%= "フォロワー数: #{user.passive_relationships.count}" %></td>
                 <td class="align-middle text-center" style="width: 15%">
                  <% if current_user != user %>
                    <% if user.followed_by?(current_user) %>
                        <p><%=link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: 'btn btn-danger btn-sm' %></p>
                    <% else %>
                        <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-success btn-sm' %></p>
                    <% end %>
                  <% end %>
                 </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
        </div>
         <div class="row justify-content-center">
           <%= paginate @users %>
         </div>
      <% else %>
        <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
        <div class= "row">
          <div class= "col-8 offset-2">
            <%= render 'public/items/postitems', items: @items %>
          </div>
        </div>
         <div class="row justify-content-center">
           <%= paginate @items %>
         </div>
      <% end %>
  </div>
</div>
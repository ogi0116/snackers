<% item.post_comments.each do |post_comment| %>
  <div class= "row mt-3">
   <div class= "col-2 text-center">
     <%= image_tag post_comment.user.get_profile_image(100,100) %><br>
   </div>
   <div class= "col-10">
    <span><%= post_comment.user.name %>さんからのコメント</span><br>
      <div class="says">
       <span><%= post_comment.comment %></span>
     </div>
    </div>
  </div>
  <div class= "row">
   <div class= "col-3 offset-9">
    <span><%= post_comment.created_at.strftime('%Y/%m/%d') %></span>
   </div>
  </div>
<% end %>

<div class= "row">
  <div class= "col-10 offset-2 mt-5">
  <%= form_with model: [item, post_comment] do |f| %>
    <%= f.text_area :comment, style: "width:70%", rows: '5', placeholder: "コメントをしよう" %><br>
    <%= f.submit "コメントする", class: "btn btn-outline-success" %>
  <% end %>
</div>
</div>









<%= form_with model: item,local:true do |f| %>

  <div class="form-group row">
    <label>商品画像</label>
　　<%= f.file_field :image, class:'ml-3',accept: "image/*" %>
  </div>

  <div class="form-group row">
    <div class="form-inline">
      <label>商品名</label>
      <%= f.text_field :title, class: 'form-control item_name ml-5 form', size: '30', placeholder:"商品名" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="form-inline">
      <label>製造会社</label>
      <%= f.text_field :company, class: 'form-control item_name ml-5 form', size: '30', placeholder:"○○会社" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-inline ">
      <label>感想</label>
      <%= f.text_area :body, class: 'form-control item_introduction ml-5 form', size: '32x6', placeholder:"ここに説明文を記述します" %>
    </div>
  </div>

   <div class="form-group row">
    <div class="form-inline">
      <label>購入場所</label>
      <%= f.text_field :area, class: 'form-control item_price ml-5 form', size: '30', placeholder: "スーパー" %>
    </div>
  </div>

  <div class="form-group text-center">
    <% if f.object.new_record? %>
      <%= f.submit "新規登録", class: 'btn btn-success px-5' %>
    <% else %>
      <%= f.submit "変更を保存", class: 'btn btn-success px-5' %>
    <% end %>
  </div>
<% end %>
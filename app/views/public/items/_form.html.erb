
<div class= "background">
<h4 class="align-middle text-center pt-3">おかしを紹介する</h4>
<%= form_with model: item,local:true do |f| %>

  <div class="form-group row">
　　<%= f.file_field :image, class:'ml-3',accept: "image/*" %>
  </div>

  <div class="form-group row">
    <div class="form-inline form_text">
      <label>商品名　</label>
      <%= f.text_field :title, class: 'form-control item_name ml-1 form', size: '15', placeholder:"商品名" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-inline form_text">
      <label>製造会社</label>
      <%= f.text_field :company, class: 'form-control item_name ml-1 form', size: '15', placeholder:"○○株式会社" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="form-inline form_text">
      <label>感想　　</label>
      <%= f.text_area :body, class: 'form-control item_introduction ml-1 form', size: '15x6', placeholder:"ここに説明文を記述します" %>
    </div>
  </div>

   <div class="form-group row">
    <div class="form-inline form_text">
      <label>購入場所</label>
      <%= f.text_field :area, class: 'form-control item_price ml-1 form', size: '15', placeholder: "スーパー" %>
    </div>
  </div>

  <div class="form-group text-center">
    <% if f.object.new_record? %>
      <%= f.submit "新規登録", class: 'btn btn-success px-5' %>
    <% else %>
      <%= f.submit "変更を保存", class: 'btn btn-success px-5' %>
    <% end %>
  </div>
<% end %>
</div>
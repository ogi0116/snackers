<table class='table'>
  <tr>
  <th><%= image_tag user.get_profile_image(100,100) %></th>

  </tr>
  <tr>
	  <th>ユーザー</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>自己紹介</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>ホームページ</th>
    <th><%= user.address %></th>
  </tr>
  <tr>
    <th>状態</th>
    <th><%= user.position_status %></th>
  </tr>

</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
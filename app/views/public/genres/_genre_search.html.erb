<div class="col-md-12 offset-md-0 col-sm-6 col-8 offset-sm-3 offset-2 mb-sm-3">
  <div class="genre_table text-center align-middle py-3">
    <h4>企業商品</h4>
    <p><i class="fa-solid fa-grip-vertical" style="color: #4c2e30;"></i>
    <span>ジャンル検索</span></p>
      <table class="mx-auto">
        <% genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to genre_path(genre.id),class: "text-dark" do %>
                <%= genre.name %>(<%= genre.products.where(is_secret: true).count %>)
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
   </div>
</div>

<div class="container py-5">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-12 text-center">
      <h3 class="mb-5">新規会員登録</h3>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 offset-lg-3 col-md-3 col-sm-12 col-12">ユーザー名</span>
      <p class="form_group">
        <%= f.text_field :name, class: "form_control flex-fill bd-highlight",size: "25", placeholder: "名前", autofocus: true, autocomplete: "name" %>
      </p>
    </div>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 offset-lg-3 col-md-3 col-sm-12 col-12">メールアドレス</span>
      <p class="form_group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form_control  flex-fill bd-highlight",size: "25", placeholder: "sample@example.com" %>
      </p>
    </div>

    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 offset-lg-3 col-md-3 col-sm-12 col-12">ステータス</span>
      <p class="form_group">
       <%= f.radio_button :position_status, User.position_statuses.key(0) %>
       <%= f.label :position_status, User.position_statuses_i18n[:normal], value: User.position_statuses.key(0) %>

       <%= f.radio_button :position_status, User.position_statuses.key(1) %>
       <%= f.label :position_status, User.position_statuses_i18n[:company], value: User.position_statuses.key(1) %>
      </p>
    </div>


    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 offset-lg-3 col-md-3 col-sm-12 col-12">パスワード(6文字以上)</span>
      <p class="form_group">
        <%= f.password_field :password, autocomplete: "new-password" ,class: "form_control flex-fill bd-highlight",size: "25" %>
      </p>
    </div>
    <div class="d-flex flex-wrap bd-highlight">
      <span class="flex-fill bd-highlight col-lg-3 offset-lg-3 col-md-3 col-sm-12 col-12">パスワード(確認用)</span>
      <p class="form_group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_control flex-fill bd-highlight",size: "25" %>
      </p>
    </div>
    <div class="d-flex bd-highlight">
      <span class="flex-fill bd-highlight col-3"></span>
      <p class="form_group offset-lg-2 my-4">
        <%= f.submit "新規登録" ,class: "btn btn-success px-5 flex-fill bd-highlight" %>
      </p>
    </div>
  <% end %>
  <h4 class="col-lg-4 col-md-4 col-sm-11 col-11 mb-3 pl-3 text-center">既に登録済みの方</h4>

  <p class="ml-5 pl-3"><%= render "public/shared/links" %>　からログインしてください。</p>
</div>